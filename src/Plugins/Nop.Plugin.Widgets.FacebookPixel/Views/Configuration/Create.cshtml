@model FacebookPixelModel

@{
    Layout = "_AdminLayout";
    ViewBag.PageTitle = (await T("Admin.Common.AddNew")).Value;
}

<form asp-controller="FacebookPixel" asp-action="Create" method="post">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @await T("Admin.Common.AddNew")
            <small>
                <i class="fas fa-arrow-circle-left"></i>
                <a asp-action="Configure" asp-controller="FacebookPixel">@await T("Common.Back")</a>
            </small>
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-save"></i>
                @await T("Admin.Common.Save")
            </button>
        </div>
    </div>
    @await Html.PartialAsync("~/Plugins/Widgets.FacebookPixel/Views/Configuration/_CreateOrUpdate.cshtml", Model)
</form>