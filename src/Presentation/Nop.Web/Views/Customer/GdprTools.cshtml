@{
    Layout = "_ColumnsTwo";

    //title
    NopHtml.AddTitleParts((await T("PageTitle.Account")).Value);
    //page class
    NopHtml.AppendPageCssClassParts("html-account-page");
    NopHtml.AppendPageCssClassParts("html-gdpt-tools-page");
}
@section left
{
    @await Component.InvokeAsync(typeof(CustomerNavigationViewComponent), new { selectedTabId = CustomerNavigationEnum.GdprTools })
}

<div class="page account-page gdpr-tools-page">
    <div class="page-title">
        <h1>@await T("Account.MyAccount") - @await T("Account.Gdpr")</h1>
    </div>
    <div class="page-body">
        @if (!string.IsNullOrEmpty(Model.Result))
        {
            <div class="result">
                @Model.Result
            </div>
        }
        <form asp-route="GdprTools" method="post">
            <div class="fieldset">
                <div class="title">
                    <strong>@await T("Account.Gdpr.Export")</strong>
                </div>
                <div class="form-fields">
                    @await T("Account.Gdpr.Export.Hint")
                </div>
                <div class="buttons">
                    <button type="submit" name="export-data" class="button-1 gdpr-export-data-button">@await T("Account.Gdpr.Export.Button")</button>
                </div>
            </div>
            <div class="fieldset">
                <div class="title">
                    <strong>@await T("Account.Gdpr.Delete")</strong>
                </div>
                <div class="form-fields">
                    @await T("Account.Gdpr.Delete.Hint")
                </div>
                <div class="buttons">
                    <button type="submit" id="delete-account" name="delete-account" class="button-1 gdpr-delete-account-button">@await T("Account.Gdpr.Delete.Button")</button>

                    <script asp-location="Footer">
                        $(document).ready(function() {
                            $('#delete-account').on('click', function() {
                                return confirm('@await T("Common.AreYouSure")');
                            });
                        });
                    </script>
                </div>
            </div>
        </form>
    </div>
</div>