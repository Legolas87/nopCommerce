@model ForumBreadcrumbModel
@using Nop.Core.Domain.Common
@inject CommonSettings commonSettings
@{
    var breadcrumbDelimiter = commonSettings.BreadcrumbDelimiter;
}
<div class="breadcrumb forum-breadcrumb">
    <ul>
        <li>
            <a href="@Url.RouteUrl("Homepage")" title="@await T("Forum.Breadcrumb.HomeTitle")">@await T("Forum.Home")</a>
        </li>
        <li>
            <span class="delimiter">@breadcrumbDelimiter</span>
            @Html.RouteLink((await T("Forum.Forums")).Value, "Boards", null, new { title = await T("Forum.Breadcrumb.ForumHomeTitle") })
        </li>
        @if (Model.ForumGroupId > 0)
        {
            <li>
                <span class="delimiter">@breadcrumbDelimiter</span>
                @Html.RouteLink(Model.ForumGroupName, "ForumGroupSlug",
                new { id = Model.ForumGroupId, slug = Model.ForumGroupSeName },
                new { title = $"{await T("Forum.Breadcrumb.ForumGroupTitle")}: {Model.ForumGroupName} " })
            </li>        
        }
        @if (Model.ForumId > 0)
        {
            <li>
                <span class="delimiter">@breadcrumbDelimiter</span>
                @Html.RouteLink(Model.ForumName, "ForumSlug",
                new { id = Model.ForumId, slug = Model.ForumSeName },
                new { title = $"{await T("Forum.Breadcrumb.ForumTitle")}: {Model.ForumName} " })
            </li>
        }
        @if (Model.ForumTopicId > 0)
        {
            <li>
                <span class="delimiter">@breadcrumbDelimiter</span>
                @Html.RouteLink(Model.ForumTopicSubject, "TopicSlug",
                new { id = Model.ForumTopicId, slug = Model.ForumTopicSeName },
                new { title = $"{await T("Forum.Breadcrumb.TopicTitle")}: {Model.ForumTopicSubject} " })
            </li>
        }
    </ul>
</div>