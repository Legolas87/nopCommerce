<div class="search-box forum-search-box">
    <form asp-route="Search" method="get">
        <div class="basic">
            <input type="text" class="search-box-text" id="forums-small-searchterms" name="searchterms" placeholder="@await T("Forum.SearchForumsTooltip")" />
            <button type="submit" class="button-2 search-box-button">@await T("Forum.SearchButton")</button>
        </div>
        <div class="advanced">
            @Html.RouteLink((await T("Forum.AdvancedSearch")).Value, "Search", new { advs = true }, new { Title = (await T("Forum.AdvancedSearch")).Value })
        </div>
    </form>
</div>