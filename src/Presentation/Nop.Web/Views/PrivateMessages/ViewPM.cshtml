@model PrivateMessageModel
@{
    Layout = "_ColumnsOne";

    //title
    NopHtml.AddTitleParts((await T("PageTitle.ViewPM")).Value);
    //page class
    NopHtml.AppendPageCssClassParts("html-private-messages");
    NopHtml.AppendPageCssClassParts("html-private-message-view-page");
}
<div class="page private-messages private-message-view-page">
    <div class="page-title">
        <h1>@await T("PrivateMessages.View.ViewMessage")</h1>
    </div>
    <div class="page-body">
        <div class="view-message">
            <ul class="message-head">
                <li class="sender">
                    <label>@await T("PrivateMessages.View.From")</label>
                    <span>@Model.CustomerFromName</span>
                </li>
                <li class="recipient">
                    <label>@await T("PrivateMessages.View.To")</label>
                    <span>@Model.CustomerToName</span>
                </li>
                <li class="subject">
                    <label>@await T("PrivateMessages.View.Subject")</label>
                    <span>@Model.Subject</span>
                </li>
            </ul>
            <div class="message-body">
                @Html.Raw(Model.Message)
            </div>
        </div>
        <div class="buttons">
            <button type="button" class="button-1 reply-pm-button" onclick="setLocation('@Url.RouteUrl("SendPMReply", new { toCustomerId = Model.FromCustomerId, replyToMessageId = Model.Id })')">@await T("PrivateMessages.View.ReplyButton")</button>

            <button type="button" class="button-2 delete-pm-button" onclick="setLocation('@Url.RouteUrl("DeletePM", new { privateMessageId = Model.Id })')">@await T("PrivateMessages.View.DeleteButton")</button>

            <button type="button" class="button-2 back-pm-button" onclick="setLocation('@Url.RouteUrl("PrivateMessages")')">@await T("PrivateMessages.View.BackButton")</button>
        </div>
    </div>
</div>
