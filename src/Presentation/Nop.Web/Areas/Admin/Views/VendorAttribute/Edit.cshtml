@model VendorAttributeModel

@{
    //page title
    ViewBag.PageTitle = (await T("Admin.Vendors.VendorAttributes.EditAttributeDetails")).Value;
    //active menu item (system name)
    NopHtml.SetActiveMenuItemSystemName("Vendor and user settings");
}

<form asp-controller="VendorAttribute" asp-action="Edit" method="post" id="vendorattribute-form">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @await T("Admin.Vendors.VendorAttributes.EditAttributeDetails") - @Model.Name
            <small>
                <i class="fas fa-arrow-circle-left"></i>
                <a asp-action="List">@await T("Admin.Vendors.VendorAttributes.BackToList")</a>
            </small>
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-save"></i>
                @await T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn btn-primary">
                <i class="far fa-save"></i>
                @await T("Admin.Common.SaveContinue")
            </button>
            <span id="vendorattribute-delete" class="btn btn-danger">
                <i class="far fa-trash-alt"></i>
                @await T("Admin.Common.Delete")
            </span>
            @await Component.InvokeAsync(typeof(AdminWidgetViewComponent), new { widgetZone = AdminWidgetZones.AdminVendorAttributeDetailsButtons, additionalData = Model })
        </div>
    </div>
    @await Html.PartialAsync("_CreateOrUpdate", Model)
</form>
<nop-delete-confirmation asp-model-id="@Model.Id" asp-button-id="vendorattribute-delete" />