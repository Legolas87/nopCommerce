@model ForumGroupModel

@{
    //page title
    ViewBag.PageTitle = (await T("Admin.ContentManagement.Forums.ForumGroup.CreateForumGroup")).Value;
    //active menu item (system name)
    NopHtml.SetActiveMenuItemSystemName("Manage forums");
}

<form asp-controller="Forum" asp-action="CreateForumGroup" method="post">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @await T("Admin.ContentManagement.Forums.ForumGroup.CreateForumGroup")
            <small>
                <i class="fas fa-arrow-circle-left"></i>
                <a asp-action="List">@await T("Admin.ContentManagement.Forums.ForumGroup.BackToList")</a>
            </small>
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-save"></i>
                @await T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn btn-primary">
                <i class="far fa-save"></i>
                @await T("Admin.Common.SaveContinue")
            </button>
            @await Component.InvokeAsync(typeof(AdminWidgetViewComponent), new { widgetZone = AdminWidgetZones.ForumGroupDetailsButtons, additionalData = Model })
        </div>
    </div>
    @await Html.PartialAsync("_CreateOrUpdateForumGroup", Model)
</form>