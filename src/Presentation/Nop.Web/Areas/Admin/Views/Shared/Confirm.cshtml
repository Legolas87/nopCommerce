@model ActionConfirmationModel

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">            
            <h4 class="modal-title" id="@(Model.WindowId)-title">@await T("Admin.Common.AreYouSure")</h4>
			<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        </div>
        <div class="modal-body">
            @if (!string.IsNullOrEmpty(Model.AdditonalConfirmText))
            {
                <div class="additional-text">
                    @await T(Model.AdditonalConfirmText)
                </div>
            }
            @await T("Admin.Common.ActionConfirmation")
        </div>
        <div class="modal-footer">
            <button type="submit" id="@(Model.WindowId)-submit-button" class="btn btn-primary float-right">
                @await T("Admin.Common.Yes")
            </button>
            <span class="btn btn-default float-right margin-r-5" data-dismiss="modal">@await T("Admin.Common.NoCancel")</span>
        </div>
    </div>
</div> 