@model ProductAttributeValueModel

@{
    Layout = "_AdminPopupLayout";
 
    //page title
    ViewBag.PageTitle = (await T("Admin.Catalog.Products.ProductAttributes.Attributes.Values.EditValueDetails")).Value;
}

<form asp-controller="Product" asp-action="ProductAttributeValueEditPopup"
      asp-route-btnId="@Context.Request.Query["btnId"]"
      asp-route-formId="@Context.Request.Query["formId"]">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @await T("Admin.Catalog.Products.ProductAttributes.Attributes.Values.EditValueDetails")
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-save"></i>
                @await T("Admin.Common.Save")
            </button>
            @await Component.InvokeAsync(typeof(AdminWidgetViewComponent), new { widgetZone = AdminWidgetZones.ProductAttributeValueDetailsButtons, additionalData = Model })
        </div>
    </div>
    @await Html.PartialAsync("_CreateOrUpdateProductAttributeValue", Model)
</form>