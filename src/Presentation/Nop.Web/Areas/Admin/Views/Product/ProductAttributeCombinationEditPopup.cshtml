@model ProductAttributeCombinationModel

@{
    Layout = "_AdminPopupLayout";

    //page title
    ViewBag.PageTitle = (await T("Admin.Catalog.Products.ProductAttributes.AttributeCombinations.Edit")).Value;
}

<form asp-controller="Product" asp-action="ProductAttributeCombinationEditPopup"
      asp-route-btnId="@Context.Request.Query["btnId"]"
      asp-route-formId="@Context.Request.Query["formId"]">
    <input asp-for="ProductId" type="hidden" />
    <div class="content-header clearfix">
        <h1 class="float-left">
            @await T("Admin.Catalog.Products.ProductAttributes.AttributeCombinations.Edit")
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-save"></i>
                @await T("Admin.Common.Save")
            </button>
            @await Component.InvokeAsync(typeof(AdminWidgetViewComponent), new { widgetZone = AdminWidgetZones.ProductAttributeCombinationDetailsButtons, additionalData = Model })
        </div>
    </div>    
    @await Html.PartialAsync("_CreateOrUpdateProductAttributeCombination", Model)    
</form>