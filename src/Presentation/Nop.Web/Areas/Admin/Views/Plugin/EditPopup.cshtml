@model PluginModel

@{
    Layout = "_AdminPopupLayout";

    //page title
    ViewBag.PageTitle = (await T("Admin.Configuration.Plugins.EditDetails")).Value;
}

<form asp-controller="Plugin" asp-action="EditPopup"
      asp-route-systemName="@Context.Request.Query["systemName"]"
      asp-route-btnId="@Context.Request.Query["btnId"]"
      asp-route-formId="@Context.Request.Query["formId"]">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @await T("Admin.Configuration.Plugins.EditDetails")
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-save"></i>
                @await T("Admin.Common.Save")
            </button>
            @await Component.InvokeAsync(typeof(AdminWidgetViewComponent), new { widgetZone = AdminWidgetZones.PluginDetailsButtons, additionalData = Model })
        </div>
    </div>
    @await Html.PartialAsync("_CreateOrUpdatePlugin", Model)
</form>